{
  "name": "supercraft",
  "version": "0.1.0",
  "description": "可定制的 AI 辅助开发工作流系统",
  "type": "module",
  "bin": {
    "supercraft": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": ["**/tests/**/*.test.ts"]
  },
  "keywords": [
    "claude-code",
    "skills",
    "workflow"
  ],
  "author": "T0UGH",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.3",
    "js-yaml": "^4.1.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "jest": "^30.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
